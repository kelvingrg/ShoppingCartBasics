<section>
  <div class="container">
    <div class="row">
      <a href="/admin/add-product" class="btn btn-success mt-4 " style="width:150px; margin-left:auto" >Add product</a>
    </div><br /><br />
    <table class="table table table-bordered table table-striped">
      <thead>
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
          <tr>
            <th scope="row" class="auto-index">1</th>
            <td>{{this.title}}</td>
            <td>{{this.price}}</td>
            <td><img
                style="width: 50px;height:50px"
                src="/product-images/{{this._id}}.jpg"
                alt=""
              /></td>
          </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>